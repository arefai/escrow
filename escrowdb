dbfile="db.sqlite3"

create() {
  sqlite3 $dbfile < schema.sql
  sqlite3 $dbfile < data.sql
}

delete() {
  rm -rf $dbfile
}


if [ $# -ne 1 ]; then
  usage
  exit 1
fi


# Parse argument.  $1 is the first argument
case $1 in
  "create")
    # check if db exists
    if [ ! -f $dbfile ]; then
      create
    else
      echo "Error: database already exists"
      exit 1
    fi
    ;;

  "destroy")
    delete
    ;;

  "reset")
    # make into functions
    delete
    create
    ;;
esac
